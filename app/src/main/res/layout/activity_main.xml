<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bcgr"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/stoplight_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/stoplight_bcgr"
        android:rowCount="3"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/red_color_stoplight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/unactive_circle" />

        <View
            android:id="@+id/yellow_color_stoplight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/unactive_circle" />

        <View
            android:id="@+id/green_color_stoplight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/unactive_circle" />
    </GridLayout>

    <android.widget.Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="START"
        android:fontFamily="@font/lalezar_regular"
        android:textSize="35sp"
        android:textColor="@color/stroke_bcgr_stopight"
        android:background="@drawable/button_start"
        tools:ignore="HardcodedText" />

</RelativeLayout >